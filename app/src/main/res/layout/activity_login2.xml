<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.sherp.missionarogya.thesherpapp.LoginActivity">

    <TextView
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:id="@+id/qasetID"
        android:layout_height="wrap_content"
        android:textSize="20pt"/>

    <CheckBox android:id="@+id/isFollowup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dip"
        android:checked="false"
        android:text="This is a FOLLOW-UP interview." />

    <Spinner
        android:layout_centerInParent="true"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <ImageButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dip"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:contentDescription="Login"
        android:src="@drawable/login"
        android:scaleType="fitXY" />
</RelativeLayout>
