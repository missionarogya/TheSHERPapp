<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    android:background="#E6E6E6"
    tools:context="android.sherp.missionarogya.thesherpapp.ConsentFormActivity">

   <TextView
        android:textColor="#000"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:id="@+id/log"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Logged in as: " />

    <TextView
        android:textColor="#00F"
        android:layout_toEndOf="@id/log"
        android:layout_width="wrap_content"
        android:id="@+id/loginID"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="" />

    <Button
        android:textColor="#00F"
        android:textSize="13pt"
        android:id="@+id/logout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        style="?android:attr/borderlessButtonStyle"/>

    <CheckBox
        android:textSize="16pt"
        android:id="@+id/chkConsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity = "start"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/txtVenue"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="16pt"
        android:text="Venue : "
        android:clickable="false"
        android:visibility="invisible"
        android:layout_marginTop="337dip"
        android:layout_alignLeft="@id/txtVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginTop="330dip"
        android:id="@+id/spinnerVenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txtVenue"
        android:clickable="false"
        android:textSize="16pt"
        android:visibility="invisible"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="530dp"
        android:id="@+id/latitude"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="560dp"
        android:id="@+id/longitude"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginTop="506dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/txtIntervieweeId"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:layout_alignLeft="@id/txtIntervieweeId"
        android:visibility="invisible"
        android:text="Interviewee ID: " />

    <EditText
        android:id="@+id/editIntervieweeId"
        android:layout_toEndOf="@id/txtIntervieweeId"
        android:layout_marginTop="500dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/buttonStartInterview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:contentDescription="Start Interview"
        android:src="@drawable/startinterview"
        android:scaleType="fitXY" />

</RelativeLayout>
