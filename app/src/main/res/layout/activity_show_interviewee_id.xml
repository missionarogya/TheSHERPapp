<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    android:background="#E6E6E6"
    tools:context="android.sherp.missionarogya.thesherpapp.ShowIntervieweeID">

    <TextView
        android:textColor="#000"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:id="@+id/log"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Logged in as: " />

    <TextView
        android:textColor="#00F"
        android:layout_toEndOf="@id/log"
        android:layout_width="wrap_content"
        android:id="@+id/loginID"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="" />

    <Button
        android:textColor="#00F"
        android:textSize="13pt"
        android:id="@+id/logout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/intervieweeID"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20pt"
        android:layout_marginTop="300dip"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/buttonTakeAnotherInterview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dip"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:src="@drawable/startinterview"
        android:contentDescription="Start Interview"
        android:scaleType="fitXY"/>


    <Button
        android:id="@+id/buttonTakeAnotherInterviewDiffQAset"
        android:visibility="invisible"
        android:clickable="false"
        android:textSize="11pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dip"
        android:layout_centerHorizontal="true"
        android:text="Conduct another interview with a different QAset" />

</RelativeLayout>
